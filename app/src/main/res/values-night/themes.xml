<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorOnPrimary">@color/colorOnBackground</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/colorOnBackground</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">false</item>

        <item name="colorSurface">@color/colorOnBackground</item>
        <item name="colorOnSurface">@color/colorBackground</item>
        <!-- Customize your theme here. -->
        <item name="materialAlertDialogTheme">@style/AlertDialogTheme</item>

    </style>

    <style name="buttonStyle">
        <item name="backgroundTint">@color/colorOnNumeric</item>
        <item name="android:layout_margin">@dimen/two_dp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:padding">@dimen/ten_dp</item>


    </style>

    <style name="greyButtonStyle">
        <item name="backgroundTint">@color/greyDark</item>
        <item name="android:layout_margin">@dimen/two_dp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:padding">@dimen/ten_dp</item>

    </style>


    <style name="greenButtonStyle">
        <item name="backgroundTint">@color/green</item>
        <item name="android:layout_margin">@dimen/two_dp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:padding">@dimen/ten_dp</item>


    </style>

    <style name="views">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>